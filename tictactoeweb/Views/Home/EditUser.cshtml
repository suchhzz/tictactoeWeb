@model tictactoeweb.Models.MainModels.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/home/admin-edit.css">
    <title>Edit User</title>
</head>
<body>
    <div class="main-container d-flex">
        <div class="edit-form">
            <form asp-controller="Home" asp-action="EditUser" method="post">
                <div class="form-group">
                    <label>Id</label><input type="text" placeholder="Id" readonly asp-for="@Model.Id">
                </div>
                <div class="form-group">
                    <label>Username</label><input type="text" placeholder="Username" asp-for="@Model.Username">
                </div>
                <div class="form-group">
                    <label>Password</label><input type="text" placeholder="Password" asp-for="@Model.Password">
                </div>
                <div class="form-group">
                    <label>Role Id</label><input type="text" placeholder="Role Id" readonly asp-for="@Model.RoleId">
                </div>
                <div class="form-group">
                    <label>Games</label><input type="text" placeholder="Games" asp-for="@Model.Games">
                </div>
                <div class="form-group">
                    <label>Wins</label><input type="text" placeholder="Wins" asp-for="@Model.Wins">
                </div>
                <input type="submit" value="Edit">
            </form>
        </div>
    </div>
</body>
</html>